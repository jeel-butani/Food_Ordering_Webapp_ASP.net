<div class="main-content">
    <div class="wrapper">
        <div class="nav-details">
            <h1 style="font-weight: 600; text-align: center; font-size:2rem">Update Order</h1>

            <form action="" method="POST">
                <table class="tbl-30">
                    <tr>
                        <td>Title:</td>
                        <td><b>Food Name</b></td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td><b>₹ Price</b></td>
                    </tr>
                    <tr>
                        <td>Qty:</td>
                        <td>
                            <input type="number" name="qty" value="">
                        </td>
                    </tr>
                    <tr>
                        <td>Status:</td>
                        <td>
                            <select name="status">
                                <option value="Ordered">Ordered</option>
                                <option value="On Delivery">On Delivery</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </td>
                    </tr>
                </table>
            </form>
            <button class="btn-all">Update Order</button>
        </div>

