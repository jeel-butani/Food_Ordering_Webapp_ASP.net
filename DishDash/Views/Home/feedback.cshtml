
@{
    ViewBag.Title = "feedback";
}
<link href="~/Content/feedback_style.css" rel="stylesheet" />
<div class="inner-banner" style="">

    <div class="inner">
        <h2>Feedback</h2>
        <div class="breadcrumb-list-wrap">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li>Feedback</li>
            </ul>
        </div>
    </div>

</div>

<section class="feedback-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="feedback-img">
                    <img src="~/Content/index_img/feedback.png" alt="" />
                </div>
            </div>
            <div class="col-md-6 ps-lg-5 mt-4 mt-md-0">
                <h2 class="main-title">WRITE TO US</h2>
                <div class="feedback-form">
                    <div id="emailMsg"></div>
                    <form class="needs-validation" id="contact_form" novalidate="" method="post">
                        <input type="hidden" name="sendEmail" value="ok" />
                        <div class="form-group">
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter Full Name" />
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" id="email" maxlength="254" class="form-control" placeholder="Enter valid email address" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" id="phone" class="form-control" placeholder="Enter valid Mobile Number" />
                        </div>
                        <div class="form-group">
                            <textarea name="message" id="message" class="form-control" placeholder="Enter Message"></textarea>
                        </div>
                        <div id="overlay" class="mb-1"></div>
                        <button class="btn btn-primary" type="submit" id="btn_submit">Send Message</button>
                        <!--<button type="submit" class="btn mt-2">Submit</button>-->
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


