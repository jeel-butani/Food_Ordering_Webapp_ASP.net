
@{
    ViewBag.Title = "userDetails";
}
<link href="~/Content/signup_style.css" rel="stylesheet" />
<script src="~/Scripts/shareDetailVali.js"></script>
<div class="inner-banner">

    <div class="inner">
        <h2>Welcome To the Fooddy World</h2>
        <div class="breadcrumb-list-wrap">
            <ul>
                <li>Share your details for Ordering Food</li>
            </ul>
        </div>
    </div>

</div>

<section class="feedback-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="feedback-img">
                    <img src="~/Content/index_img/feedback.png" alt="" />
                </div>
            </div>
            <div class="col-md-6 ps-lg-5 mt-4 mt-md-0">
                <h2 class="main-title">Share Your details</h2>
                <div class="feedback-form">
                    <div id="emailMsg"></div>
                    <form class="needs-validation" action="@Url.Action("AddCustomer", "Home")" id="contact_form" novalidate method="post">
                        <input type="hidden" name="sendEmail" value="ok" />

                        <div class="form-group">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="orderFor" id="orderForMyself" value="myself" checked>
                                <label class="form-check-label" for="orderForMyself">Myself</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="orderFor" id="orderForSomeoneElse" value="someone_else">
                                <label class="form-check-label" for="orderForSomeoneElse">Someone Else</label>
                            </div>
                        </div>

                        <div class="form-group" id="nameField" style="display: none;">
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter Full Name" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                Name must contain only letters.
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="contact" id="contact" pattern="[0-9]{10}" class="form-control" placeholder="Enter your contact number" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                Contact number must be 10 digits.
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="houseDetails" id="houseDetails" class="form-control" placeholder="Enter House/Flat No. / Floor / Building" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                This field is required.
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="areaDetails" id="areaDetails" class="form-control" placeholder="Enter Area / Sector / Locality" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                This field is required.
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="landmark" id="landmark" class="form-control" placeholder="Enter Nearby Landmark" required />
                            <div class="valid-feedback"></div>
                            
                        </div>

                        <div class="form-group">
                            <input type="text" name="pincode" id="pincode" class="form-control" placeholder="Enter Pincode" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                Pincode must be 6 digits.
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="city" id="city" class="form-control" placeholder="Enter City" required />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">
                                City name must contain only letters.
                            </div>
                        </div>

                        <div class="sign-up-btn">
                            <button class="btn btn-primary" type="submit" id="btn_submit" disabled>Submit</button>
                            
                        </div>
                    </form>
                </div>
                        
                </div>
            </div>
        </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const orderForMyself = document.getElementById('orderForMyself');
        const orderForSomeoneElse = document.getElementById('orderForSomeoneElse');
        const nameField = document.getElementById('nameField');

        orderForMyself.addEventListener('change', function () {
            nameField.style.display = 'none';
            document.getElementById('name').removeAttribute('required');
        });

        orderForSomeoneElse.addEventListener('change', function () {
            nameField.style.display = 'block';
            document.getElementById('name').setAttribute('required', 'required');
        });
    });
</script>