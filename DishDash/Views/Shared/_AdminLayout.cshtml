<html>
<head>
    <title>Dish-Dash-Admin</title>
    <link rel="stylesheet" href="admin.css" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
          crossorigin="anonymous" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/index_img/favicon.png" type="image/x-icon" />
</head>
<body>
    <div id="loader-wrapper">
        <div id="loader">
            <img src="~/Content/index_img/lodder_image.png" alt="DishDash Cafe and Restro" />

            <div class="two_rotating_circles"><div class="dot1"></div><div class="dot2"></div></div>
        </div>
        <div class="loader-section-wrap">
            <div class="loader-section"></div>
        </div>
    </div>
    <div class="menu text-center">
        <div class="wrap">
            <div class="menu-content">
                <img src="~/Content/index_img/dishdash_logo.png"
                     alt="DishDash Cafe and Restro"
                     class="logo" />
                <ul>
                    <li><a href="@Url.Action("Index", "Admin")">Home</a></li>
                    <li><a href="@Url.Action("manage_category", "Admin")">Category</a></li>
                    <li><a href="@Url.Action("manage_food", "Admin")">Food</a></li>
                    <li><a href="@Url.Action("manage_order", "Admin")">Order</a></li>
                    <li><a href="@Url.Action("Logout", "Admin")">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    
    @RenderBody()
    <footer>
        <div class="footer">
            <p class="text-center">2022 All rights reserved</p>
        </div>
    </footer>
</body>

</html>
